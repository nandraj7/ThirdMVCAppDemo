@model UserRegistrationViewModel

<h1> Registration User </h1>

<html>
<head>

    <title></title>
   
</head>
<body>

    <form class="form-horizontal" asp-controller="User" asp-action="Registration" method="post">

        <div class="form-group">
            <label class="control-lable col-sm2" for="Email" asp-for="Email">Email:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Email" placeholder="Enter Email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        
        <div class="form-group">
            <label class="control-lable col-sm2" for="Password" asp-for="Password">Password:</label>
            <div class="col-sm-10">
                <input type="Password" class="form-control" id="Password" placeholder="Enter Password" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="control-lable col-sm2" for="ConfirmPassword" asp-for="ConfirmPassword">Confirm Password:</label>
            <div class="col-sm-10">
                <input type="Password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="control-lable col-sm2" for="FirstName" asp-for="FirstName">FirstName:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="FirstName" placeholder="Enter First Name" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="control-lable col-sm2" for="LastName" asp-for="LastName">LastName:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="LastName" placeholder="Enter Last Name" asp-for="LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="control-lable col-sm2" for="MobileNumber" asp-for="MobileNumber">Mobile Number:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="MobileNumber" placeholder="Enter Mobile Number" asp-for="MobileNumber">
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="control-lable col-sm2" for="GenderId" asp-for="GenderId">Gender Id:</label>
                <select class="col-sm-10" asp-for="GenderId">
                    <option value="">-Select Gender-</option>
                @{
                    foreach(var gen in ViewBag.GenderList)
                    {
                        <option value="@gen.Id">@gen.Text</option>
                    }
                }


                </select>

                <span asp-validation-for="GenderId" class="text-danger"></span>
        </div>


        <div class="from-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

    </form>

</body>
</html>

